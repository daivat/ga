<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "Title of the event or demo", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Details of the event or demo", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :"Where" %>
    <%= f.text_field :location, placeholder: "Address of the event or demo", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :"When" %>
    <%= f.text_field :date, placeholder: "Date & time for your event or demo", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :contact %>
    <%= f.text_field :contact, placeholder: "Your contact details", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-info" %>
  </div>
<% end %>
