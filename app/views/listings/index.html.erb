<h1>Listings</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Image</th>
      <th>Description</th>
      <th>Location</th>
      <th>Contact</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.user.email %></td>
        <td><%= image_tag listing.image.url(:medium) %></td>
        <td><%= listing.description %></td>
        <td><%= listing.location %></td>
        <td><%= listing.contact %></td>
        <td><%= listing.date %></td>
        <td><%= link_to 'Show', listing %></td>
        <% if listing.user == current_user %>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure you would like to delete this listing?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'Create New Listing', new_listing_path %>
<% end %>