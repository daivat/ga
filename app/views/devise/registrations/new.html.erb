<div class="panel panel-primary">
	<div class="panel-heading">
		<h1 class="panel-title">Sign up</h1>
	</div>
	<div class="panel-body">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group"><%= f.label :username %>
		  <%= f.text_field :name, autofocus: true, placeholder: "Your Username", class: "form-control" %></div>

		  <div class="form-group"><%= f.label :email %>
		  <%= f.email_field :email, autofocus: true, placeholder: "Your Email Address", class: "form-control" %></div>

		  <div class="form-group"><%= f.label :password %>
		    <%= f.password_field :password, autocomplete: "off", placeholder: "8 characters or more!", class: "form-control" %></div>

		  <!--<div class="form-group"><%= f.label :password_confirmation %>
		    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div> -->

		  <div class="form-group"><%= f.submit "Sign up", class: "btn btn-primary" %></div>
		<% end %>
		<p> By signing up, I agree to GlassAngle's <%= link_to "Terms of Service", tos_path %> and <%= link_to "Privacy Policy", privacy_path %>.</p>
	</div>
		<div class="panel-footer">
			<%= render "devise/shared/links" %>
		</div>
	
</div>
