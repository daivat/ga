<div class="panel panel-primary">
  <div class="panel-heading"><p class="panel-title"><%= @listing.title %></p>
</div>
  <div class="panel-body">
    <%= image_tag @listing.image.url(:medium), class: "img-responsive", alt: "Responsive image" %>
<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Where:</strong>
  <%= @listing.location %>
</p>

<p>
  <strong>When:</strong>
  <%= @listing.date %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @listing.contact %>
</p>

</div>
  <div class="panel-footer">
<% if listing.user == current_user %>
  %= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>
<%= link_to 'Back', listings_path %>
</div>
</div>